        <item name="android:textSize">14sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:editTextStyle">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Theme.WeatherForecast.TextViewTemp">
